@{
    ViewData["Title"] = "Payroll Release";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<h2>Payroll Release</h2>
<table id="tblLog" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Product</th>
            <th>Operation</th>
            <th>Box Qty</th>
            <th></th>
        </tr>
    </thead>
</table>

@*for datatable style*@
<link href ="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
@*for icons in buttons*@
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

@section scripts{
    @*For datatable usage*@
    <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    @*for datable style with bootstrap*@
    <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>

    <script>

        var table;

        $(function () {
            table = $('#tblLog').DataTable({
                "ajax": {
                    "url": "@Url.Action("GetTransactionLog", "Home")",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "data": "ID",
                        "width": "10px"
                    },
                    { "data": "Date", orderable: false },
                    { "data": "Product", orderable: false },
                    { "data": "Operation", orderable: false },
                    { "data": "BoxQty", orderable: false }
                    ,{
                        className: "center",
                        defaultContent: "<button id='btnEdit' class='btn btn-primary'><i class='fa fa-edit'></i> Editar</button>"
                    }
                ]
            });
        });

    </script>

}